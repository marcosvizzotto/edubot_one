<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name="green">
        <color rgba="0 0.5 0 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>
    
    <!-- BASE LINK  -->

    <link name="base_link">

    </link>

    <!-- CHASSIS PART 1 LINK  -->

    <joint name="chassis_part1_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_part1"/>
        <origin xyz="-0.03 0 0"/>
    </joint>

    <link name="chassis_part1">
        <visual>
            <origin xyz="0.03 0 0.023"/>
            <geometry>
                <box size="0.06 0.2 0.006"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.03 0 0.023"/>
            <geometry>
                <box size="0.06 0.2 0.006"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.1" x="0.03" y="0.2" z="0.023">
            <origin xyz="0.03 0 0.003" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link> 

    <gazebo reference="chassis_part1">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- CHASSIS PART 2 LINK  -->  

    <joint name="chassis_part2_joint" type="fixed">
        <parent link="chassis_part1"/>
        <child link="chassis_part2"/>
        <origin xyz="0 0 0.023" rpy="0 0 0"/>
        <axis xyz="0 0 0"/>
    </joint>

    <link name="chassis_part2">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.006"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.006"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.006" radius="0.1">
            <origin xyz="0 0 0.023" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link> 

    <gazebo reference="chassis_part2">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- CHASSIS PART 3 LINK  -->  

    <joint name="chassis_part3_joint" type="fixed">
        <parent link="chassis_part1"/>
        <child link="chassis_part3"/>
        <origin xyz="0.06 0 0.023" rpy="0 0 0"/>
        <axis xyz="0 0 0"/>
    </joint>

    <link name="chassis_part3">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.006"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.006"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.006" radius="0.1">
            <origin xyz="0.06 0 0.023" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link> 

    <gazebo reference="chassis_part3">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- PCB PARTE 1 LINK  -->

    <joint name="pcb_part1_joint" type="fixed">
        <parent link="base_link"/>
        <child link="pcb_part1"/>
        <origin xyz="-0.03 0 0"/>
    </joint>

    <link name="pcb_part1">
        <visual>
            <origin xyz="0.03 0 0.078"/>
            <geometry>
                <box size="0.06 0.2 0.006"/>
            </geometry>
            <material name="green"/>
        </visual>
        <collision>
            <origin xyz="0.03 0 0.078"/>
            <geometry>
                <box size="0.06 0.2 0.006"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.1" x="0.03" y="0.2" z="0.078">
            <origin xyz="0.03 0 0.003" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link> 

    <gazebo reference="pcb_part1">
        <material>Gazebo/Green</material>
    </gazebo>

    <!-- PCB PART 2 LINK  -->  

    <joint name="pcb_part2_joint" type="fixed">
        <parent link="chassis_part1"/>
        <child link="pcb_part2"/>
        <origin xyz="0 0 0.078" rpy="0 0 0"/>
        <axis xyz="0 0 0"/>
    </joint>

    <link name="pcb_part2">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.006"/>
            </geometry>
            <material name="green"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.006"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.006" radius="0.1">
            <origin xyz="0 0 0.078" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link> 

    <gazebo reference="pcb_part2">
        <material>Gazebo/Green</material>
    </gazebo>

    <!-- PCB PART 3 LINK  -->  

    <joint name="pcb_part3_joint" type="fixed">
        <parent link="chassis_part1"/>
        <child link="pcb_part3"/>
        <origin xyz="0.06 0 0.078" rpy="0 0 0"/>
        <axis xyz="0 0 0"/>
    </joint>

    <link name="pcb_part3">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.006"/>
            </geometry>
            <material name="green"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.006"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.006" radius="0.1">
            <origin xyz="0.06 0 0.078" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link> 

    <gazebo reference="pcb_part3">
        <material>Gazebo/Green</material>
    </gazebo>

    <!-- LEFT WHEEL LINK  -->  

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.02 0.079 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03218" length="0.02683"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03218" length="0.02683"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.02683" radius="0.03218">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>        
    </link> 

    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- RIGHT WHEEL LINK  -->  

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.02 -0.079 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03218" length="0.02683"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03218" length="0.02683"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.02683" radius="0.03218">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>        
    </link> 

    <gazebo reference="right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- CASTER WHEEL LINK  -->  

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis_part1"/>
        <child link="caster_wheel"/>
        <origin xyz="-0.063 0 -0.00718" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0255" length="0.03"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0255" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.03" radius="0.0255">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link> 

    <gazebo reference="caster_wheel">
        <material>Gazebo/White</material>
        <mu1 value="0.001" />
        <mu2 value="0.001" />
    </gazebo>

        <!-- BATTERY LINK  -->

    <joint name="battery_joint" type="fixed">
        <parent link="chassis_part1"/>
        <child link="battery"/>
        <origin xyz="-0.02 0 0.04"/>
    </joint>

    <link name="battery">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.135 0.04 0.025"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.135 0.04 0.025"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.135" y="0.04" z="0.025">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link> 

    <gazebo reference="battery">
        <material>Gazebo/Orange</material>
    </gazebo>
</robot>